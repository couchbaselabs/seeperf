<body>
<h1>hello world</h1>
<canvas id="c" width="800" height="400"></canvas>
<script>
  var cvs = document.getElementById("c");
  var ctx = cvs.getContext("2d");

  ctx.lineWidth = 1;
  ctx.strokeStyle = "#ff0000";

  ctx.moveTo(20,40);
  ctx.lineTo(20,41);

  ctx.moveTo(40,40);
  ctx.lineTo(40,41);

  ctx.stroke();
</script>
</body>

